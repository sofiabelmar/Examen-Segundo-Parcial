<UserControl x:Class="Examen_Parcial2.ControlPago"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Examen_Parcial2"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Column="0" Grid.Row="0">Numero de Tarjeta:</TextBlock>
        <TextBox Grid.Column="0" Grid.Row="1" Width="500" HorizontalAlignment="Left" Name="txtNumeroTarjeta"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="2">CVV:</TextBlock>
        <TextBox Grid.Column="0" Grid.Row="3" Width="500" HorizontalAlignment="Left"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="4">Mes de Expiración:</TextBlock>
        <TextBox Grid.Column="0" Grid.Row="5" Width="500" HorizontalAlignment="Left"></TextBox>
        <TextBlock Grid.Column="0" Grid.Row="6">Año de Expiración</TextBlock>
        <TextBox Grid.Column="0" Grid.Row="7" Width="500" HorizontalAlignment="Left"></TextBox>

  
    </Grid>
</UserControl>
